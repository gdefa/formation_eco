{% extends 'base.html.twig' %}

{% block title %}Inscription instructeur{% endblock %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
            </div>
            <div class="col" id="registerTotal">
                <img class="mb-4 text-center" src="/public/images/logo_gui.jpg" alt="" width="100" height="100">
                <h1 class="mb-3 text-center" id="titleRegister">INSCRIPTION</h1>
                <h3 class="mt-3 text-center" id="subtitleRegister">Inscrivez-vous en tant qu'instructeur </h3>

                <div class="mb-3 " id="emailRegister">
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email, {
                        label: 'E-mail :'
                    }) }}
                </div>

                <div class="mb-3 " id="passwordRegister">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe : '
                    }) }}
                </div>

                <div class="mb-3" id="fullnameRegister">
                    {{ form_row(registrationForm.fullname, {
                        label: 'Nom de Famille : '
                    }) }}
                </div>
                <div class="mb-3" id="nameRegister">
                    {{ form_row(registrationForm.name, {
                        label: 'Prénom : '
                    }) }}
                </div>

                <div class="mb-3" id="photoRegister">
                    {{ form_row(registrationForm.profilePicture , {
                        label: 'Photo de profil : '
                    }) }}
                </div>

                <div class="mb-3" id="descriptionRegister">
                    {{ form_row(registrationForm.description , {
                        label: 'Décrivez vous en quelques lignes : '
                    }) }}
                </div>

                <button class="btn btn-primary" type="submit" value="Submit">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
            <div class="col">

            </div>
        </div>
    </div>

{% endblock %}
