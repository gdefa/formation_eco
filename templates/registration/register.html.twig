{% extends 'base.html.twig' %}



    <div class="container">
        <div class="row">
            <div class="col">

            <div class="d-flex justify-content-center align-items-center container mt-4" id="registerTotal">
                <div class="form-signin">
                    <img src="{{ asset('images/logo.jpg') }}" width="25%" height="35%">
                    <h1 class="mb-3 text-center" id="titleRegister">INSCRIPTION</h1>
                    <h3 class="mt-3 text-center" id="subtitleRegister">Inscrivez-vous en tant qu'instructeur </h3>
                </div>


                <div class="form-control"  id="emailRegister">
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email, {
                        label: 'E-mail :'
                    }) }}
                </div>

                <div class="form-control"  id="passwordRegister">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe : '
                    }) }}
                </div>

                <div class="form-control"  id="fullnameRegister">
                    {{ form_row(registrationForm.fullname, {
                        label: 'Nom de Famille : '
                    }) }}
                </div>
                <div class="form-control"  id="nameRegister">
                    {{ form_row(registrationForm.name, {
                        label: 'Prénom : '
                    }) }}
                </div>

                <div class="form-control"  id="photoRegister">
                    {{ form_row(registrationForm.profilePicture , {
                        label: 'Photo de profil : '
                    }) }}
                </div>

                <div class="form-control"  id="descriptionRegister">
                    {{ form_row(registrationForm.description , {
                        label: 'Décrivez vous en quelques lignes : '
                    }) }}
                </div>

                <button class="btn btn-primary" type="submit" value="Submit">S'inscrire</button>

                {{ form_end(registrationForm) }}
            </div>
            </div>
        </div>
    </div>


