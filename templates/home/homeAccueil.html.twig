{% extends 'base.html.twig' %}

{% block body %}

<div class="container-fluid" style="margin-top: 100px">
    <div class="row d-flex align-items-center mt-4" id="homeBlock">
        <div class="col-lg-3 ">

        </div>
        <div class="col-lg-3 col-xs-6 m5 ">
            <img src="{{ asset('images/laptop-inscription.jpg') }}" alt="homepage">
        </div>
        <div class="col-lg-3 col-xs-6 text-center  m5 rounded bg-rounded" id="homeImg" style="background: rgba(71,66,65,0.87);color: #d0ccb9;">
            <h1>Bievenue sur votre site EcoIT</h1>
            <p >Venez décourvrir nos formations, pour un web plus respectueux et vert</p>
            <button class="btn btn-success" href={{ path('app_register_apprenant') }} role="button" style="background-color:#474241">NOUS REJOINDRE</button>
        </div>
        <div class="col-lg-3 ">

        </div>
    </div>
</div>



    <section class="features">
        <div class="container">
            <div class="row mt-2 mb-3 ">
            <div class="intro">
                <h2 class="text-center">NOS DERNIERES FORMATIONS</h2>
                <p class="text-center">Retrouvez ici toutes nos formations disponibles </p>
            </div>
            <div class="row features">
                {% for formation in formations %}
                    <div class="col-sm-6 col-md-4 item">
                        <h3 class="name"><strong>{{ formation.title }}</strong></h3>
                        <img class="img-thumbnail" style="width:260px;height:260px" src="{{ asset('Formation/' ~  formation.picture ) }}">
                        <p class="description">{{ formation.description }}</p>
                        <a href="{{ path('app_formation_show' , {'id' :  formation.id} ) }}" class="btn btn-primary">Accès a la formation</a>
                    </div>
                {% endfor %}
            </div>

        </div>

    </section>

{% endblock %}
